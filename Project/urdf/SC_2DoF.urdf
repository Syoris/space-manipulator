<?xml version="1.0" ?>

<robot name="Chaser">

  <!-- Colors -->
  <material name="Grey">
    <color rgba="0.57 0.57 0.57 1.0"/>
  </material>
  <material name="Orange">
    <color rgba="1.0 0.423529411765 0.0392156862745 1.0"/>
  </material>
  <material name="Blue">
  <color rgba="0.5 0.7 1.0 1.0"/>      
  </material>
  <material name="Red">
    <color rgba="1 0 0 1.0"/>      
  </material>

  <!--Spacecraft-->
  <body name="Spacecraft">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="10"/>
      <inertia ixx="9.3" iyy="9.3" izz="9.3" ixy="0" ixz="0"  iyz="0"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="1 1 1" />
      </geometry>
      <material name="Grey"/>
    </visual>
  </body>
  

  <!-- Joint 1 -->
  <joint name="jnt1" type="revolute">
    <parent body="Spacecraft"/>
    <child body="Body1"/>
    <origin rpy="0 0 0" xyz="0.5 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="0" velocity="0"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>
  
  <!-- Body 1 -->
  <body name="Body1">
    <inertial>
      <origin rpy="0 0 0" xyz="0.5 0 0"/>
      <mass value="5"/>
      <inertia ixx="0.5" iyy="0.5" izz="0.5" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin rpy="0 1.5708 0" xyz="0.5 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="1"/>
      </geometry>
      <material name="Blue"/>
    </visual>
    <!-- Joint visual -->
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.1"/>
      </geometry>
      <material name="Orange"/>
    </visual>
  </body>

  <!-- Joint 2 -->
  <joint name="jnt2" type="revolute">
    <parent body="Body1"/>
    <child body="Body2"/>
    <origin rpy="0 0 0" xyz="1 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="0" velocity="0"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <!-- Body 2 -->
  <body name="Body2">
    <inertial>
      <origin rpy="0 0 0" xyz="0.25 0 0"/>
      <mass value="2.5"/>
      <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0" />
    </inertial>
    <visual>
      <origin rpy="0 1.5708 0" xyz="0.25 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.5"/>
      </geometry>
      <material name="Blue"/>
    </visual>
    <!-- Joint visual -->
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.075" length="0.15"/>
      </geometry>
      <material name="Orange"/>
    </visual>
  </body>
  
  <!-- Joint End-Effector -->
  <joint name="jnt_ee" type="fixed">
    <parent body="Body2"/>
    <child body="endeffector"/>
    <origin rpy="0 0 0" xyz="0.5 0 0"/>
    <axis xyz="1 0 0"/>
  </joint>
  
  <!-- End-Effector -->
  <body name="endeffector">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
      <material name="Red"/>
    </visual>
  </body>
  
</robot>

