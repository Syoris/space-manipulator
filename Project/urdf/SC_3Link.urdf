<?xml version="1.0" ?>

<robot name="Chaser">

  <!-- Colors -->
  <material name="Grey">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>
  <material name="Orange">
    <color rgba="1.0 0.423529411765 0.0392156862745 1.0"/>
  </material>
  <material name="Blue">
  <color rgba="0.5 0.7 1.0 1.0"/>      
  </material>
  <material name="Red">
    <color rgba="1 0 0 1.0"/>      
  </material>



  <!--Spacecraft-->
  <body name="Spacecraft">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="100"/>
      <inertia ixx="9.3" ixy="0" ixz="0" iyy="9.3" iyz="0" izz="9.3"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="2.5 2.5 2.5" />
      </geometry>
      <material name="Grey"/>
    </visual>
  </body>

  <!-- Joint to Manipulator -->
  <joint name="Spacecraft_Manipulator_Joint" type="fixed">
    <parent body="Spacecraft"/>
    <child body="Body_0"/>
    <origin rpy="0 0 0" xyz="0 0 1.25"/>
    <axis xyz="0 0 1"/>
  </joint>
  
  <!--Manipulator-->
  <!-- Body 0 -->
  <body name="Body_0">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0.125"/>
      <mass value="1"/>
      <inertia ixx="0.05" ixy="0" ixz="0" iyy="0.05" iyz="0" izz="0.05"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.125"/>
      <geometry>
        <cylinder radius="0.05" length="0.25"/>
      </geometry>
      <material name="Grey"/>
    </visual>
  </body>

  <!-- Joint 1 -->
  <joint name="Joint_1" type="revolute">
    <parent body="Body_0"/>
    <child body="Body_1"/>
    <origin rpy="0 0 0" xyz="0 0 0.25"/>
    <axis xyz="1 0 0"/>
    <limit effort="0" velocity="0"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

    <!-- Body 1 -->
  <body name="Body_1">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 1"/>
      <mass value="10"/>
      <inertia ixx="0.05" ixy="0" ixz="0" iyy="0.05" iyz="0" izz="0.05"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 1"/>
      <geometry>
        <cylinder radius="0.05" length="2"/>
      </geometry>
      <material name="Blue"/>
    </visual>
    <visual>
      <origin rpy="0 1.5708 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.1"/>
      </geometry>
      <material name="Orange"/>
    </visual>
  </body>

  <!-- Joint 2 -->
  <joint name="Joint_2" type="revolute">
    <parent body="Body_1"/>
    <child body="Body_2"/>
    <origin rpy="0 0 0" xyz="0 0 2"/>
    <axis xyz="1 0 0"/>
    <limit effort="0" velocity="0"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <!-- Body 2 -->
  <body name="Body_2">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 1"/>
      <mass value="10"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 1"/>
      <geometry>
        <cylinder radius="0.05" length="2"/>
      </geometry>
      <material name="Blue"/>
    </visual>
    <visual>
      <origin rpy="0 1.5708 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.075" length="0.15"/>
      </geometry>
      <material name="Orange"/>
    </visual>
  </body>

  <!-- Joint 3 -->
  <joint name="Joint_3" type="revolute">
    <parent body="Body_2"/>
    <child body="Body_3"/>
    <origin rpy="0 0 0" xyz="0 0 2"/>
    <axis xyz="1 0 0"/>
    <limit effort="0" velocity="0"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <!-- Body 3 -->
  <body name="Body_3">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 1"/>
      <mass value="10"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 1"/>
      <geometry>
        <cylinder radius="0.05" length="2"/>
      </geometry>
      <material name="Blue"/>
    </visual>
    <visual>
      <origin rpy="0 1.5708 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.075" length="0.15"/>
      </geometry>
      <material name="Orange"/>
    </visual>
  </body>
  
  <!-- Joint End-Effector -->
  <joint name="Joint_EE" type="fixed">
    <parent body="Body_3"/>
    <child body="Body_EE"/>
    <origin rpy="0 0 0" xyz="0 0 2"/>
    <axis xyz="1 0 0"/>
  </joint>
  
  <!-- End-Effector -->
  <body name="Body_EE">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
      <material name="Red"/>
    </visual>
  </body>
  
</robot>

